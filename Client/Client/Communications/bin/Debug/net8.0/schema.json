{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "ClientId": { "type": "string" },
    "DbConnection": {
      "type": "object",
      "properties": {
        "DataBase": { "type": "string" },
        "NotifyConnectionString": { "type": "string" },
        "AlarmConnectionString": { "type": "string" }
      },
      "required": [ "DataBase", "NotifyConnectionString", "AlarmConnectionString" ]
    },
    "ClientSettings": {
      "type": "object",
      "properties": {
        "ClientId": { "type": "string" },
        "UseCache": { "type": "boolean" },
        "Mode": { "type": "string" }
      },
      "required": [ "ClientId", "Mode" ]
    },
    "ConnectionSettings": {
      "type": "object",
      "properties": {
        "AlarmUrl": {
          "type": "string",
          "format": "uri"
        },
        "NotifyUrl": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [ "AlarmUrl", "NotifyUrl" ]
    },
    "Kafka": {
      "type": "object",
      "properties": {
        "Producer": {
          "type": "object",
          "properties": {
            "BootstrapServers": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": [ "BootstrapServers" ]
        },
        "Consumer": {
          "type": "object",
          "properties": {
            "BootstrapServers": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": [ "BootstrapServers" ]

        }
      },
      "required": [ "Producer", "Consumer" ]
    }
  },
    "required": [ "DbConnection", "ClientSettings", "ConnectionSettings", "Kafka" ]
}