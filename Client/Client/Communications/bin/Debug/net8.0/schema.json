{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "DbConnection": {
      "type": "object",
      "properties": {
        "DataBase": { "type": "string" },
        "ConnectionString": { "type": "string" }
      },
      "required": [ "DataBase", "ConnectionString" ]
    },
    "ClientSettings": {
      "type": "object",
      "properties": {
        "ClientId": { "type": "string" }
      },
      "required": [ "ClientId" ]
    },
    "ConnectionSettings": {
      "type": "object",
      "properties": {
        "CloseTimeout": {
          "type": "string",
          "pattern": "^\\d{2}:\\d{2}:\\d{2}$"
        },
        "Url": {
          "type": "string",
          "format": "uri"
        },
        "ServerTimeout": {
          "type": "string",
          "pattern": "^\\d{2}:\\d{2}:\\d{2}$"
        }
      },
      "required": [ "CloseTimeout", "Url", "ServerTimeout" ]
    }
  },
  "required": [ "DbConnection", "ClientSettings", "ConnectionSettings" ]
}