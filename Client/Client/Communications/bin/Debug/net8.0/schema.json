{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "DbConnection": {
      "type": "object",
      "properties": {
        "DataBase": { "type": "string" },
        "Notify": {
          "type": "object",
          "properties": {
            "ConnectionString": { "type": "string" }
          },
          "required": [ "ConnectionString" ]
        },
        "Alarm": {
          "type": "object",
          "properties": {
            "ConnectionString": { "type": "string" }
          },
          "required": [ "ConnectionString" ]
        }
      },
      "required": [ "DataBase", "Notify", "Alarm" ]
        },
        "ClientSettings": {
          "type": "object",
          "properties": {
            "ClientId": { "type": "string" },
            "UseCache": { "type": "boolean" },
            "Mode": { "type": "string" }
          },
          "required": [ "ClientId", "Mode" ]
        },
        "ConnectionSettings": {
          "type": "object",
          "properties": {
            "Notify": {
              "type": "object",
              "properties": {
                "Url": { "type": "string" }
              },
              "required": [ "Url" ]
            },
            "Alarm": {
              "type": "object",
              "properties": {
                "Url": { "type": "string" }
              },
              "required": [ "Url" ]
            }
          },
          "required": [ "Alarm", "Notify" ]
        },
        "Kafka": {
          "type": "object",
          "properties": {
            "Producer": {
              "type": "object",
              "properties": {
                "BootstrapServers": {
                  "type": "string",
                  "format": "uri"
                }
              },
              "required": [ "BootstrapServers" ]
            },
            "Consumer": {
              "type": "object",
              "properties": {
                "BootstrapServers": {
                  "type": "string",
                  "format": "uri"
                }
              },
              "required": [ "BootstrapServers" ]

            }
          },
          "required": [ "Producer", "Consumer" ]
        }
      },
    "required": [ "DbConnection", "ClientSettings", "ConnectionSettings", "Kafka" ]
}