{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "DbConnection": {
      "type": "object",
      "properties": {
        "DataBase": { "type": "string" },
        "NotifyConnectionString": { "type": "string" },
        "AlarmConnectionString": { "type": "string" }
      },
      "required": [ "DataBase", "NotifyConnectionString", "AlarmConnectionString" ]
    },
    "ClientSettings": {
      "type": "object",
      "properties": {
        "ClientId": { "type": "string" },
        "UseCache": { "type": "boolean" },
        "UseCommand": { "type": "boolean" }
      },
      "required": [ "ClientId" ]
    },
    "ConnectionSettings": {
      "type": "object",
      "properties": {
        "AlarmUrl": {
          "type": "string",
          "format": "uri"
        },
        "NotifyUrl": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [ "AlarmUrl", "NotifyUrl" ]
    }
  },
  "required": [ "DbConnection", "ClientSettings", "ConnectionSettings" ]
}